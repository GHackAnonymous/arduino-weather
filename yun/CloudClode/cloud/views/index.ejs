    <script type="text/javascript">
        window.onload = function () {
            var chart = new CanvasJS.Chart("grafico_temperatura", {

                title: {
                    text: "Temperatura"
                },
                axisX: {
                    valueFormatString: "HH:mm"
                },

                data: [//array of dataSeries
                    { //dataSeries object
                        name: "Temperatura",
                        /*** Change type "column" to "bar", "area", "line" or "pie"***/
                        type: "line",
                        color: "#8f2600",
                        dataPoints: [<%= datosTemperatura %>]
                    }
                ]
            });

            chart.render();

            var chart2 = new CanvasJS.Chart("grafico_humedad", {

                title: {
                    text: "Humedad"
                },
                axisX: {
                    valueFormatString: "HH:mm"
                },
                data: [//array of dataSeries
                    { //dataSeries object
                        name: "Humedad",
                        color: "#00878f",
                        /*** Change type "column" to "bar", "area", "line" or "pie"***/
                        type: "line",
                        dataPoints: [<%= datosHumedad %>]
                    }
                ]
            });

            chart2.render();

        }
    </script>
